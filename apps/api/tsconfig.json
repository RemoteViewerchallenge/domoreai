{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "API",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "outDir": "dist",
    "declaration": true, // Add this to generate .d.ts files
    "declarationMap": true, // Good for debugging types
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true // <--- It's already here.
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
