{
  "name": "@repo/voice-input",
  "version": "1.0.0",
  "description": "System-wide voice-to-text input application",
  "main": "dist/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build": "tsc",
    "dev": "tsc && electron .",
    "start": "electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "robotjs": "^0.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "pnpm": {
    "overrides": {
      "electron": "^28.0.0"
    }
  },
  "build": {
    "appId": "com.core.voiceinput",
    "productName": "Voice Input",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "renderer/**/*"
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  }
}
