{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "apps/ui": {
      "entry": [
        "src/main.tsx"
      ],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": [
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}",
        "**/test/**",
        "**/tests/**",
        "**/__tests__/**"
      ],
      "ignoreDependencies": []
    }
  },
  "ignore": [
    "apps/api/**",
    "apps/voice-input/**",
    "packages/**",
    "**/*.config.{js,ts,mjs}",
    "**/*.d.ts"
  ],
  "ignoreDependencies": [
    "type-fest"
  ]
}
