{
  "name": "mono-repo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "pnpm --parallel --stream --filter=!@repo/voice-input run dev",
    "desktop": "turbo run desktop",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:push": "prisma db push --schema=apps/api/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=apps/api/prisma/schema.prisma",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/picomatch": "^4.0.2",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "knip": "^5.73.3",
    "lint-staged": "^16.2.7",
    "prettier": "^2.8.8",
    "prisma": "5.19.1",
    "turbo": "latest",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@10.22.0",
  "dependencies": {
    "ignore": "^7.0.5",
    "vscode-ws-jsonrpc": "^3.5.0",
    "zod": "^3.23.8"
  },
  "lint-staged": {
    "apps/api/**/*.{ts,tsx}": [
      "eslint --config apps/api/.eslintrc.cjs --fix"
    ],
    "apps/ui/**/*.{ts,tsx}": [
      "eslint --config apps/ui/eslint.config.mjs --fix"
    ]
  }
}
