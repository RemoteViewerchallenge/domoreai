{
  "name": "mono-repo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "pnpm --parallel --stream run dev",
    "stop-dev": "bash ./stop-dev.sh",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "@types/cors": "^2.8.17",
    "prettier": "^2.8.8",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@8.6.10"
}