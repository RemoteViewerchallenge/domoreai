{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "NodeNext", // Change to NodeNext
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "api/*": ["./apps/api/dist/*"]
    }
  },
  "exclude": ["node_modules", "dist", "patches", "frontend", "out"]
}